  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Generate timestamp",
          "const timestamp = Date.now().toString();",
          "pm.environment.set('timestamp', timestamp);",
          "",
          "// Get request details",
          "const method = pm.request.method;",
          "const url = pm.request.url.toString();",
          "const body = pm.request.body ? pm.request.body.raw : '';",
          "",
          "// Create signature payload",
          "let payload = method + url + timestamp;",
          "if (body && method !== 'GET') {",
          "    payload += body;",
          "}",
          "",
          "// Generate HMAC signature (requires client secret to be set)",
          "const clientSecret = pm.environment.get('client_secret');",
          "if (clientSecret) {",
          "    const signature = CryptoJS.HmacSHA256(payload, clientSecret).toString(CryptoJS.enc.Base64);",
          "    pm.environment.set('signature', signature);",
          "} else {",
          "    console.log('Warning: client_secret not set in environment');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(\"Status code is successful\", function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
          "});",
          "",
          "pm.test(\"Response contains success field\", function () {",
          "    if (pm.response.code !== 204) {",
          "        var jsonData = pm.response.json();",
          "        pm.expect(jsonData).to.have.property('success');",
          "    }",
          "});",
          "",
          "pm.test(\"Response time is less than 2000ms\", function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(2000);",
          "});"
        ]
      }
    }
